<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marriott - Build A Learning Plan - @ViewBag.Title</title>
    @Styles.Render("~/Styles/css")
    @Styles.Render("~/Styles/material-design-css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="~/images/favicon.ico" type="image/ico" />

    @RenderSection("styles", required: false)
</head>
<body>
    <div id="header-area">
        <span id="header-text">Build A Learning Plan</span>
        <span id="menu-icon" class="glyphicon glyphicon-menu-hamburger" title="Menu"></span>
    </div>

    <div class="container body-content">

        @Html.Partial("_MainMenu")

        @RenderBody()

        <footer class="footer-div"></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/material-design")
    @Scripts.Render("~/bundles/datatables")

    @RenderSection("scripts", required: false)
   
    <script src="~/Scripts/MainMenu.js"></script>
    <script src="~/Scripts/Global.js"></script>

</body>
</html>
