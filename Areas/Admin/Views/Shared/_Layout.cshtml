<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marriott - Build A Learning Plan - @ViewBag.Title</title>
    @Styles.Render("~/Styles/css")
    @Styles.Render("~/Styles/css/Admin")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("styles", required: false)

</head>
<body>
    <div id="admin-header">
        <div class="row">
            <div class="col-xs-6">
                <span id="header-text">Build A Learning Plan</span>
            </div>
            <div class="col-xs-6">
                <div class="pull-right">
                    <span id="header-text-sub">Administration</span>
                    <span id="menu-icon" class="glyphicon glyphicon-menu-hamburger" title="Menu"></span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container body-content">
       
        @Html.Partial("_MainMenu")

        @if (!ViewBag.Title.Contains("Home"))
        {
            <div class="row">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <h3>@ViewBag.Title</h3>
                        </div>
                        <div id="returnButton" class="col-xs-6">
                            <div class="pull-right">
                                <a class="btn btn-md btn-raised btn-raised btn-primary" href="@Url.Action("Index", "Home", new { area = "Admin" }, null)">
                                    <span class="glyphicon glyphicon-circle-arrow-left"></span> &nbsp; Return to Admin Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert @((ViewData.ModelState.ContainsKey("success"))? "alert-success" : "alert-danger") fade in">
                <a href="#" class="close">&times;</a>
                @Html.ValidationSummary()
            </div>
        }

        <div id="validationSuccess" class="alert alert-success fade in">
            <a href="#" class="close" title="Cancel">&times;</a>
            <div class="message"></div>
        </div>
        <div id="validationError" class="alert alert-danger fade in">
            <a href="#" class="close" title="Cancel">&times;</a>
            <div class="message"></div>
        </div>

        @RenderBody()

        <footer class="footer-div"></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/datatables/Admin")
    @Scripts.Render("~/bundles/wysiwyg-editor")
    
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/Admin/GeneralAdmin.js"></script>
    <script src="~/Scripts/MainMenu.js"></script>

</body>
</html>
